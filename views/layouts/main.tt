<style>
    #page_content {
        display: block;
        position:absolute;
        bottom:0;
        top:0;
        left:0;
        right:0;
    }
    .column_wrap {position:relative;}
    #page_header {
        width: auto;
        padding: 3px 5px;
        margin: 0;
        height: 60px;
        background-color: #AEAEBF;
    }
    #header_search {
        float: right;
        width: 200px;
        text-align: right;
    }
    #header_avatar {
        float: left;
        margin-right: 5px;
    }
    .metanav {
        margin-top: 3px;
        height: 55px;
        vertical-align: middle;
    }
    .admin_menu {
        width:200px;
        position:absolute;
        left:0;
        top:40px;
        bottom:40px;
        height:auto;
        display: block;
        margin-right: 5px;
    }
    .admin_menu_option {
        text-align: left;
        padding: 3px;
        border-bottom: solid 1px #000;
    }
    .admin_menu_option a {
        font-weight: bold;
    }
    .admin_menu_option .disabled {
        font-weight: normal;
        color: #777;
    }
    #section_content {
        margin-left: 205px;
        padding: 5px;
        width: auto;
        height: auto;
        min-height: 450px;
    }
    #footer {
    }
